<%
var Caramel = require("caramel").Caramel;
var site = require("conf/site.json");

var log = new Log();
log.isDebug = true;

(function () {
    if(!Caramel.module("user").isUserLoggedIn()){
        return;
    }
    Caramel.render({
        "name":"page/base",
        "inputs":{
            "title":"Gadget Store",
            "appContext":site.context,
            "theme":site.theme.base,
            "header":{
                    "name":"header/store",
                    "inputs":{
                        "theme":site.theme.base
                    }
            },
            "body":{
                "name":"store/gadgets"
            },
            "footer":{
                "name":"footer"
                }
            }
    });
}());

%>
